<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- IOS外观Dialog -->
    <style name="ios_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/iosdialog_bg</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- IOS外观SheetDialog -->
    <style name="ios_sheet_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- IOSSheetDialog动画 -->
    <style name="ios_sheet_anim" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/iossheet_in</item>
        <item name="android:windowExitAnimation">@anim/iossheet_out</item>
    </style>
</resources>